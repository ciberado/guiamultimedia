<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
    <context-param>
        <param-name>guiamultimedia-config-path</param-name>
        <param-value>file:C:\Datos\Dropbox\ws\botguia\botserver-jardibotanic\guiamultimedia\config.properties</param-value>
    </context-param>
    
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>map</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <!--
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.ciberado.botserver.wms.JarExtractionListener</listener-class>
    </listener>
    -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>wms</servlet-name>
        <servlet-class>com.ciberado.botserver.wms.WMSServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TTSServlet</servlet-name>
        <servlet-class>com.ciberado.botserver.tts.TTSServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>wms</servlet-name>
        <url-pattern>/wms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MediaServlet</servlet-name>
        <servlet-class>com.ciberado.botserver.multimedia.MediaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MediaServlet</servlet-name>
        <url-pattern>/mediadb</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
